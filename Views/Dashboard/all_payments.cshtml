@{
    ViewData["Title"] = "all_payments";
    Layout = "~/Views/Shared/_DbLayout.cshtml";
}
<!-- Page Content-->
<div class="page-content">
    <div class="container-fluid">
        <!-- Page-Title -->
        <div class="row">
            <div class="col-sm-12">
                <div class="page-title-box">
                    <div class="float-right">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="javascript:void(0);">Hospital</a></li>
                            <li class="breadcrumb-item"><a href="javascript:void(0);">Payments</a></li>
                            <li class="breadcrumb-item active">Payments</li>
                        </ol>
                    </div>
                    <h4 class="page-title">All Payments</h4>
                </div>
                <!--end page-title-box-->
            </div>
            <!--end col-->
        </div>
        <!-- end page title end breadcrumb -->
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-body">
                        <button type="button" class="btn btn-primary px-4 mt-0 mb-3" data-toggle="modal" data-animation="bounce" data-target=".bs-example-modal-lg"><i class="mdi mdi-plus-circle-outline mr-2"></i>Add New Payment</button>
                        <div class="table-responsive">
                            <table id="datatable" class="table">
                                <thead class="thead-light">
                                    <tr>
                                        <th>Bill No</th>
                                        <th>Company Name</th>
                                        <th>Payment</th>
                                        <th>Bill Date</th>
                                        <th>Tax</th>
                                        <th>Discount</th>
                                        <th class="text-right">Total</th>
                                    </tr>
                                    <!--end tr-->
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                    <tr>
                                        <td>@item.string_var0</td>
                                        <td><a href="payment-invoice.html">@item.string_var1</a></td>
                                        <td>@item.string_var2</td>
                                        <td>@item.date_var0</td>
                                        <td>@item.string_var3</td>
                                        <td>@item.string_var4</td>
                                        <td class="text-right text-dark font-weight-bold">@item.string_var5</td>
                                    </tr>
                                    }
                                    <!--end tr-->
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <!--end card-body-->
                </div>
                <!--end card-->
            </div>
            <!--end col-->
        </div>
        <!--end row-->
    </div>
    <!-- container -->
    <footer class="footer text-center text-sm-left">&copy; 2019 Metrica <span class="text-muted d-none d-sm-inline-block float-right">Crafted with <i class="mdi mdi-heart text-danger"></i> by Mannatthemes</span></footer>
    <!--end footer-->
</div>
<!-- end page content -->
